# EditorConfig helps maintain consistent coding styles
# More info: https://editorconfig.org/

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
indent_size = 4
max_line_length = 88

[*.{js,ts,jsx,tsx,vue}]
indent_size = 2

[*.{json,yml,yaml}]
indent_size = 2

[*.{md,rst}]
trim_trailing_whitespace = false
max_line_length = 100

[*.{sh,bash}]
indent_size = 2

[Makefile]
indent_style = tab

[*.{toml,cfg,ini}]
indent_size = 4

[Dockerfile*]
indent_size = 2

[*.{html,xml,svg}]
indent_size = 2